<odoo>
    <record id="product_template_form_view_inherit_rmc_filters" model="ir.ui.view">
        <field name="name">product.template.form.inherit.rmc.filters</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='purchase_ok']/.." position="after">
                <span class="d-inline-block">
                    <field name="is_on_sale"/>
                    <label for="is_on_sale"/>
                </span>
            </xpath>
        </field>
    </record>
</odoo>
